# App
PORT=3000
APP_ENV=development
ENABLE_SWAGGER=true
ENABLE_CORS=true

# =============================================================================
# DATABASE - Supabase PostgreSQL
# =============================================================================
# For Supabase, you need TWO connection strings:
#
# 1. DATABASE_URL - Use Transaction Pooler (port 6543)
#    - For application runtime queries
#    - Example: postgresql://postgres.[project-ref]:[password]@aws-0-ap-southeast-1.pooler.supabase.com:6543/postgres?pgbouncer=true
#
# 2. DIRECT_URL - Use Direct Connection (port 5432)
#    - For migrations only (npx prisma migrate/db push)
#    - Example: postgresql://postgres.[project-ref]:[password]@aws-0-ap-southeast-1.pooler.supabase.com:5432/postgres
#
# IMPORTANT: Add ?pgbouncer=true to DATABASE_URL for connection pooling
# =============================================================================

# Transaction Pooler (for app runtime) - port 6543
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@[region].pooler.supabase.com:6543/postgres?pgbouncer=true

# Direct Connection (for migrations) - port 5432
DIRECT_URL=postgresql://postgres.[project-ref]:[password]@[region].pooler.supabase.com:5432/postgres

# JWT
ACCESS_TOKEN_SECRET=your-secret-key
ACCESS_TOKEN_EXPIRATION_TIME=3600
REFRESH_TOKEN_SECRET=your-refresh-secret-key
REFRESH_TOKEN_EXPIRATION_TIME=604800

# Frontend
FRONTEND_URL=http://localhost:5173

# Telegram Bot (for notifications)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_USE_WEBHOOK=false
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook

# Cron Secret (for n8n external cron triggers)
CRON_SECRET=your-random-secret-key-here