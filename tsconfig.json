{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "incremental": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "noLib": false,
    "noUnusedLocals": false,
    "outDir": "dist",
    "paths": {
      "@n-configs/*": ["configs/*"],
      "@n-constants": ["constants/index"],
      "@n-constants/*": ["constants/*"],
      "@n-models": ["models/index"],
      "@n-models/*": ["models/*"],
      "@n-database/*": ["database/*"],
      "@n-decorators": ["decorators/index"],
      "@n-decorators/*": ["decorators/*"],
      "@n-dtos": ["dtos/index"],
      "@n-dtos/*": ["dtos/*"],
      "@n-exceptions": ["filter-exceptions/index"],
      "@n-exceptions/*": ["filter-exceptions/*"],
      "@n-guards/*": ["guards/*"],
      "@n-interceptors": ["interceptors/index"],
      "@n-interceptors/*": ["interceptors/*"],
      "@n-jobs/*": ["jobs/*"],
      "@n-middlewares/*": ["middlewares/*"],
      "@n-pipes/*": ["pipes/*"],
      "@n-shared/*": ["shared/*"],
      "@n-modules/*": ["modules/*"],
      "@n-filters/*": ["filters/*"],
      "@n-utils": ["utils/index"],
      "@n-utils/*": ["utils/*"],
      "@n-strategies": ["strategies/index"],
      "@n-strategies/*": ["strategies/*"]
    },
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2021",
    "useUnknownInCatchVariables": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}

